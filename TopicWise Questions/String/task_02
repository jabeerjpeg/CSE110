
import java.util.Scanner;
public class task2 {
  public static void main(String[] args) {
    Scanner sc = new Scanner(System.in);
    String s1 = sc.nextLine();
    boolean flag = true;
    for (int i = 0; i < s1.length() / 2; i++) {
      if (s1.charAt(i) != s1.charAt(s1.length() - (1
                                                     + i))) {
        flag = false;
        break;
      }
    }
    System.out.println(flag);
    sc.close();
  }
}
